@model IEnumerable<LibraryApp.Domain.DomainModels.Book>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<div class="container">
	<div class="row flex-nowrap overflow-auto">
		@foreach (var book in Model)
		{
			<div class="col-auto d-flex">
				<div class="card bg-black d-flex flex-column border-5" style="width: 15rem; height: 100%;">
					<img src="@book.Image" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Book image" />
					<div class="card-body d-flex flex-column justify-content-between">
						<div>
							<h5 class="card-title text-white text-truncate" title="@book.Title">@book.Title</h5>
							<p class="card-text text-white-50 mb-2 text-truncate" title="@book.Author">@book.Author</p>
						</div>
						<div class="d-flex flex-column gap-2 mt-3">
							<a asp-controller="Books" asp-action="AddBookToCart" asp-route-id="@book.ID" class="btn btn-primary w-100">Add Book To Cart</a>
							<div class="d-flex justify-content-between">
								<a asp-action="Edit" asp-route-id="@book.ID" class="btn btn-success w-50 me-1">Edit</a>
								<a asp-action="Delete" asp-route-id="@book.ID" class="btn btn-danger w-50 ms-1">Delete</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>

