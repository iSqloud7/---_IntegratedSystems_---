@model List<EShop.Web.Models.Domain.Product>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="m-3">
		<a class="btn btn-success" asp-controller="Products" asp-action="Create">Add New Product!</a>
	</div>

	@{
		for (int i = 0; i < Model.Count; i++)
		{
			var item = Model[i];

			if(i % 3 == 0)
			{
				@:<div class="row">
			}

			<div class="col-md-3 m-4">
				<div class="card" style="height: 15rem; width: 18rem">
					<img class="card-img-top" style="height: 70%" src="@item.ProductImage" alt="Image For Product!"/>
				</div>
				<div class="card-body">
					<h3 class="card-title">@item.ProductName</h3>
					<p class="card-text">@item.ProductDescription</p>
					<h6>Price: @item.ProductPrice</h6>
				</div>
				<div class="card-footer">
					<a asp-controller="Products" asp-action="AddProductToCart" class="btn btn-info">Add To Cart!</a>
					<a asp-controller="Products" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit Card!</a>
				</div>
			</div>

			if(i % 3 == 2)
			{
				@:</div>
			}
		}
	}

</div>
